<h1>Update Pet</h1>

<form method="POST" action="/pets/<%= @pet.id %>">
	<br>

	<label>Pet Name: <input type="text" name="pet[name]" value="<%=@pet.name%>" id="pet_name"></label>
	
	<br>
	<h4>Change the owner?</h4>
	<p><% Owner.all.each do |owner| %>
	 <input type="checkbox" name="pet[owner_id]" value = "<%= owner.id %>" id= "<%= owner.id %>" <%='checked' if @pet.owner.name.include?(owner.name) %>>
	 <label><%= owner.name %></label></input></p>
	 <% end %>

	 <h4>Add New Owner:</h4>
	 <p><label>New Owner <input type="text" name="owner[name]" id="owner_name"></label></p>

	 <input type="submit" value="Update Pet" id="submit">




</form>